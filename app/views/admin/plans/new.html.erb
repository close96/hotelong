<h1>プランの新規登録</h1>

<%= form_for [:admin, @plan], url: {action: 'confirm'} do |form| %>
  <table class="attr">
    <tr>
      <th><%= form.label :plan_name %></th>
      <td><%= form.text_field :name, size: 8 %></td>
    </tr>
    <tr>
      <th><%= form.label :apply_count %></th>
      <% apply_options = [1, 2, 3] %>
      <td><%= form.select :apply_count, apply_options %>人</td>
    </tr>
    <tr>
      <th><%= form.label :price %></th>
      <td><%= form.text_field :price %></td>
    </tr>
  </table>

  <p><%= form.submit "確認画面へ" %></p>
<% end %>

<%= link_to "管理者トップへ", :admin_root %>