<h1>会員情報</h1>

<table class="list">
  <tr>
    <td>ユーザID</td>
    <td>氏名</td>
    <td>性別</td>
    <td>住所</td>
    <td>電話番号</td>
    <td>生年月日</td>
    <td>メールアドレス</td>
    <td>管理者権限</td>
  </tr>
  <tr>
    <td><%= @member.user_id %></td>
    <td><%= @member.name %></td>
    <td>
      <% if @member.sex == 0 %>
        男
      <% else %>
        女
      <% end %>
    </td>
    <td><%= @member.address %></td>
    <td><%= @member.tel %></td>
    <td><%= @member.birthday %></td>
    <td><%= @member.email %></td>
    <td>
      <% if @member.admin_authority %>
        有り
      <% else %>
        無し
      <% end %>
    </td>

    <td>
      <%= link_to "編集", controller: "members", action: "edit",id: current_member %> |
      <%= link_to "退会", @member, method: :delete,
            data: { confirm: "本当に退会しますか?" } %>
    </td>
  </tr>
</table>
