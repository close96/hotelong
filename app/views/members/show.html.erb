<h1>会員情報</h1>

<table class="list">
  <tr>
    <th>ユーザID</th>
    <th>氏名</th>
    <th>性別</th>
    <th>住所</th>
    <th>電話番号</th>
    <th>生年月日</th>
    <th>メールアドレス</th>
    <th>管理者権限</th>
  </tr>
  <tr>
    <td><%= @member.user_id %></td>
    <td><%= @member.name %></td>
    <td>
      <% if @member.sex == 0 %>
        男
      <% else %>
        女
      <% end %>
    </td>
    <td><%= @member.address %></td>
    <td><%= @member.tel %></td>
    <td><%= @member.birthday %></td>
    <td><%= @member.email %></td>
    <td>
      <% if @member.admin_authority %>
        有り
      <% else %>
        無し
      <% end %>
    </td>

    <td>
      <%= link_to "編集", controller: "members", action: "edit",id: current_member %> |
      <%= link_to "退会", @member, method: :delete,
            data: { confirm: "本当に退会しますか?" } %>
    </td>
  </tr>
</table>
